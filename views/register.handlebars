<h2>Register Account</h2>

{{#if errors}}
    {{#each errors}}
        <div class= "form-error"> {{msg}} </div>
    {{/each}}
{{/if}}

<form method="post" action="/users/register">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name">
    </div>
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username" placeholder="Username">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="example@test.com">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password1" placeholder="">
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" class="form-control" name="password2" placeholder="">
    </div>
    <button type="submit">Submit</button>
</form>